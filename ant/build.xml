<?xml version="1.0"?>

<project default="main" basedir="." name="lotto">
	<echo message="pulling in property files" />
	<property file="build.properties" />
	<property file="application.properties" />

	<description>
		Lotto Program
	</description>

	<property name="src" location="../src/main/java/" />
	<property name="bin" location="bin" />
	<property name="conf" location="conf" />
	<property name="lib" location="lib" />
	<property name="log" location="log" />
	<property name="lotto" location="lotto" />
	<property name="build" location="build" />
	<property name="mainclass" value="../src/main/java/Main">
	</property>

	<path id="classpath">
		<fileset dir="/${lotto}/lib">
			<include name="*.jar" />
		</fileset>
		<fileset dir="/${lotto}/conf">
			<include name="*.properties" />
		</fileset>
	</path>

	<target name="init">
		<mkdir dir="${lotto}" />
		<mkdir dir="${lotto}/bin" />
		<mkdir dir="${lotto}/conf" />
		<mkdir dir="${lotto}/log" />
		<mkdir dir="${lotto}/lib" />
		<mkdir dir="${lotto}/build" />

		<copydir src="../src/main/resources-ubuntu" dest="${lotto}/conf">
		</copydir>
		<copydir src="../target/dependency" dest="${lotto}/lib">
		</copydir>
	</target>

	<echo message="compile" />
	<target name="compile" depends="init" description="complie the source">
		<javac srcdir="${src}" destdir="${lotto}/build" classpathref="classpath" />
	</target>

	<target name="dist" depends="compile" description="generate the description">
		<jar destfile="${lotto}/lib/lotto.jar" basedir="${lotto}/build">
			<manifest>
				<attribute name="Main-Class" value="kr.co.torpedo.Main" />
			</manifest>
			<manifest>
				<attribute name="Class-Path" value="slf4j-api-1.7.26.jar slf4j-log4j12-1.7.26.jar slf4j-simple-1.7.26.jar log4j-1.2.17.jar logback-classic-1.2.3.jar" />
			</manifest>
		</jar>
	</target>

	<target name="main">
		<wsgen />
	</target>

</project>
